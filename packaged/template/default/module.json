{
  "pipModules": { "ubuntu": [], "windows": ["pywin32"] },
  "defaults": [
    {
      "name": "initializeUsers",
      "platforms": [ "ubuntu" ],
      "params": { "users": [ { "name": "jappleseed", "pass": "abc", "admin": false } ] },
      "src": "initializeUsers.py"
    }
  ],
  "checks": [
    {
      "name": "fileExists",
      "params": { "path": "" },
      "src": "fileExists.py"
    },
    {
      "name": "commandContains",
      "params": {
        "command": "",
        "query": "",
        "regex": ""
      },
      "src": "commandContains.py"
    },
    {
      "name": "fileContains",
      "params": {
        "path": "",
        "query": "",
        "regex": ""
      },
      "src": "fileContains.py"
    },
    {
      "name": "hashCompare",
      "params": {
        "hash": "xyz",
        "path": "/home/file.txt"
      },
      "src": "hashCompare.py"
    },
    {
      "name": "userExists",
      "extends": "fileContains",
      "platforms": [ "ubuntu" ],
      "params": [ "user" ],
      "args": {
        "path": "/etc/passwd",
        "query": "$user"
      }
    },
    {
      "name": "isUserAdmin",
      "extends": "commandContains",
      "platforms": [ "ubuntu" ],
      "params": [ "user" ],
      "args": {
        "command": "getent group sudo",
        "query": "$user"
      }
    },
    {
      "name": "appInstalled",
      "extends": "commandContains",
      "platforms": [ "ubuntu" ],
      "params": [ "app" ],
      "args": {
        "command": "dpkg-query -f '${Package}###${Version}' -W",
        "query": "$app"
      }
    }
  ]
}